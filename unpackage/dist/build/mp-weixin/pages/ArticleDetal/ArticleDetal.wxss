.game {
  height: 150rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  border-radius: 0 0 12rpx 12rpx;
  margin-top: 100rpx;
}
.game .logo {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  border-radius: 6rpx;
}
.game .title {
  width: calc(100% - 340rpx);
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  position: absolute;
  top: 40rpx;
  left: 170rpx;
  font-weight: 900;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  border: none;
}
.game .type {
  width: calc(100% - 340rpx);
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  position: absolute;
  top: 90rpx;
  left: 170rpx;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  border: none;
}
.game .area {
  height: 120rpx;
  width: 400rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: #444a59;
  opacity: 0;
  -webkit-transition: all 0.1s;
  -o-transition: all 0.1s;
  transition: all 0.1s;
}
._button::after{
  border: none;
}
.game .btn {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  width: 122rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  border-radius: 5rpx;
  -webkit-transition: all 0.1s;
  -o-transition: all 0.1s;
  transition: all 0.1s;
  font-size: 28rpx;
  background-color: #FFC341;
  color: #fff;
}
